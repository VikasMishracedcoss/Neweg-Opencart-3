                                                    </td>
                                                    <td>
                                                        <input class="form-control" id="additional_cost_{{ key }}"
                                                               value="{% if (int_shipping['additional_cost'] is defined) %} {{ int_shipping['additional_cost'] }} {% endif %}"
                                                               placeholder="{{ label_additional_cost }}"
                                                               onkeypress="numberValidate(event, this)"
                                                               name="profile_specifics[international_shipping][{{ key }}][additional_cost]"
