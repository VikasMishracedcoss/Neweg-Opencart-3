
{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <a onclick="$('#form').submit();" class="btn btn-primary" title="{{ button_save }}"><i
                            class="fa fa-save"></i></a>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}"
                   class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if (error_warning) %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" id="form" class="form-horizontal">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#profileInfo" data-toggle="tab" aria-expanded="false">
                                <i class="fa fa-file-code-o"></i> Profile Info
                            </a></li>
                        <li><a href="#profileCategory" data-toggle="tab">
                                <i class="fa fa-gears"></i> Category Mapping
                            </a></li>
                        <li><a href="#profileAttributes" data-toggle="tab">
                                <i class="fa fa-wrench"></i> Attribute Mapping
                            </a></li>
                        <li><a href="#profileEbaySettings" data-toggle="tab">
                                <i class="fa fa-info-circle"></i> Ebay Settings
                            </a></li>
                        <li><a href="#profileEbayShipping" data-toggle="tab">
                                <i class="fa fa-truck"></i> Ebay Shipping
                            </a></li>

                    </ul>
                    <input type="hidden" name="id" id="input-id" value="{{ id }}"/>
                    <div class="tab-content">
                        <div class="tab-pane active" id="profileInfo">

                            <div class="form-group required">
                                <label class="col-sm-2 control-label"
                                       for="input-title">{{ entry_profile_name }}</label>
                                <div class="col-sm-10">
                                    <input type="text" name="profile_name" id="input-title" value="{{ profile_name }}"
                                           class="form-control"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label"
                                       for="input-status">{{ column_status }}</label>
                                <div class="col-sm-10">
                                    <select name="status" id="input-status" class="form-control">
                                        {% if (status) %}
                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                        {% else %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 control-label"
                                       for="input-title">{{ entry_description_template }}</label>
                                <div class="col-sm-10">
                                    <select name="profile_specifics[description_template]"   class="form-control">
                                        <option value=""></option>
                                        {% if (description_templates) %}
                                            {% for desc_template in description_templates %}
                                                <option value="{{ desc_template['id'] }}"
                                                        {% if (profile_specifics['description_template'] is defined and profile_specifics['description_template'] == desc_template['id']) %}
                                                            selected="selected"
                                                        {% endif %}
                                                >
                                                    {{ desc_template['template_name'] }}</option>
                                            {% endfor %}     {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label"
                                       for="input-manufacturer">{{ entry_manufacturer }}</label>
                                <div class="col-sm-10">
                                    <input type="text" name="manufacturer" value="" id="input-manufacturer"
                                           class="form-control"/>

                                    <div id="product_manufacturer" class="well well-sm"
                                         style="height: 150px; overflow: auto;">
                                        {% for product_manufacturer in product_manufacturers %}
                                            <div id="product_manufacturer{{ product_manufacturer['manufacturer_id'] }}">
                                                <i class="fa fa-minus-circle"></i> {{ product_manufacturer['name'] }}
                                                <input type="hidden" name="product_manufacturer[]"
                                                       value="{{ product_manufacturer['manufacturer_id'] }}"/>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="profileCategory">
                            <div class="row">
                                <div class="col-sm-12 col-md-6">
                                    <div class="form-group required">
                                        <label class="col-sm-3 control-label"
                                               for="input-category">{{ entry_category }}</label>
                                        <div class="col-sm-9">
                                            <input type="text" name="category" value="" id="input-category"
                                                   class="form-control"/>
                                            <div id="product-category" class="well well-sm"
                                                 style="height: 150px; overflow: auto;">
                                                {% for product_category in product_categories %}
                                                    <div id="product-category{{ product_category['category_id'] }}">
                                                        <i class="fa fa-minus-circle"></i> {{ product_category['name'] }}
                                                        <input type="hidden" name="product_category[]"
                                                               value="{{ product_category['category_id'] }}"/>
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-6">
                                    <div class="form-group">
                                        <div class="col-sm-12" id="ebay-category">

                                        </div>
                                    </div>

                                </div>
                            </div>


                        </div>
                        <div class="tab-pane" id="profileDefaultAttributes">

                        </div>
                        <div class="tab-pane" id="profileAttributes">
                            <div id="profile_attribute_mapping_section">
                                <table class="table table-bordered">
                                    <thead>
                                    <tr style="">
                                        <td colspan="3">
                                            <div style="font-size: 16px; text-align: center; padding: 5px;">Ebay
                                                Required/Optional Attributes Mapping
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: center">
                                            <label for="input-ebay-attributes">Ebay Attributes</label>
                                        </td>
                                        <td style="text-align: center">
                                            <label for="input-store-attributes">Store Attributes</label>
                                        </td>
                                        <td style="text-align: center">
                                            <label for="input-default-values">Set Default Value</label>
                                        </td>
                                    </tr>
                                    </thead>
                                    <tbody id="profile_attribute_mapping_section">

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane" id="profileEbaySettings">
