                                <label class="col-sm-2 control-label">{{ label_domestic_shipping }}</label>
                                <div class="col-sm-10">
                                    <select name="profile_specifics[enable_domestic_shipping]" id="enable_domestic_shipping" class="form-control" onchange="enableDomesticShipping()">
                                        {% if (profile_specifics['enable_domestic_shipping'] is defined and profile_specifics['enable_domestic_shipping']) %}
                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                        {% else %}
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                        {% endif %}
                                    </select>
                                </div>
                            </div>
