                                        <thead>
                                        <tr class="headings">
                                            <th>{{ label_shipping_service }}</th>
                                            <th>{{ label_shipping_cost }}</th>
                                            <th>{{ label_additional_cost }}</th>
                                            <th></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% if (profile_specifics['domestic_shipping'] is defined and (profile_specifics['domestic_shipping'])) %}
                                            {% for key,dom_shipping in profile_specifics['domestic_shipping'] %}
                                                <tr>
                                                    <td>
                                                        <select class="form-control" name="profile_specifics[domestic_shipping][{{ key }}][shipping_service]">
                                                            {% for dom_service in domestic_shipping_services %}
                                                                <option
                                                                        {% if (dom_shipping['shipping_service'] == dom_service['value']) %}
                                                                            selected="selected"
                                                                        {% endif %}
                                                                        value="{{ dom_service['value'] }}">{{ dom_service['label'] }}</option>
                                                            {% endfor %}
                                                        </select>
                                                    </td>
                                                    <td>
                                                        <input class="form-control" id="shipping_cost_{{ key }}"
                                                               value="{% if (dom_shipping['shipping_cost'] is defined) %} {{ dom_shipping['shipping_cost'] }} {% endif %}"
                                                               placeholder="{{ label_shipping_cost }}"
                                                               onkeypress="numberValidate(event, this)"
                                                               name="profile_specifics[domestic_shipping][{{ key }}][shipping_cost]"
                                                               style="width:50%;"

                                                        />
                                                    </td>
