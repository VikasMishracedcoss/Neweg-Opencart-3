                                                        <input class="form-control" id="additional_cost_{{ key }}"
                                                               value="{% if (dom_shipping['additional_cost'] is defined) %} {{ dom_shipping['additional_cost'] }} {% endif %}"
                                                               placeholder="{{ label_additional_cost }}"
