                                <label class="col-sm-2 control-label"
                                       for="input-title">{{ label_item_location }}</label>
                                <div class="col-sm-10">
                                    <input type="text" name="profile_specifics[item_location]" id="" value="{% if (profile_specifics['item_location'] is defined) %} {{ profile_specifics['item_location'] }} {% endif %}"
