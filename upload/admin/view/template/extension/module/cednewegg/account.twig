                                <label class="col-sm-2 control-label"
                                       for="input-title">{{ label_postal_code }}</label>
                                <div class="col-sm-10">
                                    <input type="text" name="profile_specifics[postal_code]" id="" value="{% if (profile_specifics['postal_code'] is defined) %} {{ profile_specifics['postal_code'] }} {% endif %}"
