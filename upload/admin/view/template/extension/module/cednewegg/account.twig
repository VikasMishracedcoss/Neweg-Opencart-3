                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 control-label"
                                       for="input-title">{{ label_max_dispatch_time }}</label>
                                <div class="col-sm-10">
                                    <input type="text" name="profile_specifics[max_dispatch_time]" id="" value="{% if (profile_specifics['max_dispatch_time'] is defined) %} {{ profile_specifics['max_dispatch_time'] }} {% endif %}"
                                           class="form-control"/>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 control-label"
                                       for="input-title">{{ label_payment_methods }}</label>
                                <div class="col-sm-10">
                                    <select name="profile_specifics[payment_methods][]"  multiple="multiple" size="6" class="form-control">
                                        {% if (payment_methods and (payment_methods|length)) %}
                                            {% for method in payment_methods %}
                                                <option value="{{ method }}"
                                                        {% if (profile_specifics['payment_methods'] is defined and (method in profile_specifics['payment_methods'] |keys)) %}
                                                            selected="selected"
                                                        {% endif %}
                                                >
                                                    {{ method }}</option>
                                            {% endfor %}     {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 control-label"
                                       for="input-title">{{ label_paypal_email }}</label>
                                <div class="col-sm-10">
                                    <input type="text" name="profile_specifics[paypal_email]" id="" value="{% if (profile_specifics['paypal_email'] is defined) %} {{ profile_specifics['paypal_email'] }} {% endif %}"
                                           class="form-control"/>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 control-label"
                                       for="input-title">{{ label_return_accepted }}</label>
                                <div class="col-sm-10">
                                    <select name="profile_specifics[return_accepted]"   class="form-control">
                                        {% if (return_accepted and (return_accepted|length)) %}
                                            {% for key,ret_acc in return_accepted %}
                                                <option value="{{ key }}"
                                                        {% if (profile_specifics['return_accepted'] is defined and profile_specifics['return_accepted'] == key) %}
                                                            selected="selected"
                                                        {% endif %}
                                                >
                                                    {{ ret_acc }}</option>
                                            {% endfor %}     {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 control-label"
                                       for="input-title">{{ label_refund_option }}</label>
                                <div class="col-sm-10">
                                    <select name="profile_specifics[refund_option]"   class="form-control">
                                        {% if (refund_options and (refund_options|length)) %}
                                            {% for key,ret_acc in refund_options %}
                                                <option value="{{ key }}"
                                                        {% if (profile_specifics['refund_option'] is defined and profile_specifics['refund_option'] == key) %}
                                                            selected="selected"
                                                        {% endif %}
                                                >
                                                    {{ ret_acc }}</option>
                                            {% endfor %}     {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 control-label"
                                       for="input-title">{{ label_return_within }}</label>
                                <div class="col-sm-10">
                                    <select name="profile_specifics[return_within]"   class="form-control">
                                        {% if (return_within and (return_within)) %}
                                            {% for key,ret_acc in return_within %}
                                                <option value="{{ key }}"
                                                        {% if (profile_specifics['return_within'] is defined and profile_specifics['return_within'] == key) %}
                                                            selected="selected"
                                                        {% endif %}
                                                >
                                                    {{ ret_acc }}</option>
                                            {% endfor %}     {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 control-label"
                                       for="input-title">{{ label_shipping_cost_paidby }}</label>
                                <div class="col-sm-10">
                                    <select name="profile_specifics[shipping_cost_paidby]"   class="form-control">
                                        {% if (shipping_cost_paidby and (shipping_cost_paidby|length)) %}
                                            {% for key,ret_acc in shipping_cost_paidby %}
                                                <option value="{{ key }}"
                                                        {% if (profile_specifics['shipping_cost_paidby'] is defined and profile_specifics['shipping_cost_paidby'] == key) %}
                                                            selected="selected"
                                                        {% endif %}
                                                >
                                                    {{ ret_acc }}</option>
                                            {% endfor %}     {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 control-label"
                                       for="input-title">{{ label_shipping_service_type }}</label>
                                <div class="col-sm-10">
                                    <select name="profile_specifics[shipping_service_type]"   class="form-control">
                                        {% if (shipping_service_type and (shipping_service_type|length)) %}
                                            {% for type in shipping_service_type %}
                                                <option value="{{ type['value'] }}"
                                                        {% if (profile_specifics['shipping_service_type'] is defined and profile_specifics['shipping_service_type'] == type['value']) %}
                                                            selected="selected"
                                                        {% endif %}
                                                >
                                                    {{ type['label'] }}</option>
                                            {% endfor %}     {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 control-label"
                                       for="input-title">{{ label_free_shipping }}</label>
                                <div class="col-sm-10">
                                    <select name="profile_specifics[free_shipping]"   class="form-control">
                                        {% if (free_shipping and (free_shipping|length)) %}
                                            {% for key,ret_acc in free_shipping %}
                                                <option value="{{ key }}"
                                                        {% if (profile_specifics['free_shipping'] is defined and profile_specifics['free_shipping'] == key) %}
                                                            selected="selected"
                                                        {% endif %}
                                                >
                                                    {{ ret_acc }}</option>
                                            {% endfor %}     {% endif %}
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="profileEbayShipping">
                            <div class="form-group row">
                                <label class="col-sm-2 control-label"
                                       for="input-title">{{ label_shipping_service_type }}</label>
                                <div class="col-sm-10">
                                    <select name="profile_specifics[shipping_service_type]"   class="form-control">
                                        {% if (shipping_service_type and (shipping_service_type)) %}
                                            {% for type in shipping_service_type %}
                                                <option value="{{ type['value'] }}"
                                                        {% if (profile_specifics['shipping_service_type'] is defined and profile_specifics['shipping_service_type'] == type['value']) %}
                                                            selected="selected"
                                                        {% endif %}
                                                >
                                                    {{ type['label'] }}</option>
                                            {% endfor %}     {% endif %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 control-label"
                                       for="input-title">{{ label_free_shipping }}</label>
                                <div class="col-sm-10">
                                    <select name="profile_specifics[free_shipping]"   class="form-control">
                                        {% if (free_shipping and (free_shipping|length)) %}
                                            {% for key,ret_acc in free_shipping %}
                                                <option value="{{ key }}"
                                                        {% if (profile_specifics['free_shipping'] is defined and profile_specifics['free_shipping'] == key) %}
                                                            selected="selected"
                                                        {% endif %}
                                                >
                                                    {{ ret_acc }}</option>
                                            {% endfor %}     {% endif %}
                                    </select>
                                </div>
                            </div>
